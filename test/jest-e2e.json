{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.ts",            
    "!src/main.ts",           
    "!src/**/*.module.ts",   
    "!src/**/*.interface.ts"  
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["html", "text-summary"],
  "forceExit": true,
  "detectOpenHandles": true
}
